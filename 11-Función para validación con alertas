    // Mensajes de validaci칩n para la creaci칩n de una cuenta

    public function validarNuevaCuenta() {
        if(!$this->nombre) {
            self::$alertas['error'][] = 'El Nombre es Obligatorio';
        }
        if(!$this->apellido) {
            self::$alertas['error'][] = 'Los Apellidos son Obligatorios';
        }
        if(!$this->email) {
            self::$alertas['error'][] = 'El Email es Obligatorio';
        }
        if(!$this->password) {
            self::$alertas['error'][] = 'La Contrase침a es Obligatorio';
        }
        if(strlen($this->password) < 6) {
            self::$alertas['error'][] = 'La Contrase침a debe contener al menos 6 caracteres';
        }

        return self::$alertas;
    }
